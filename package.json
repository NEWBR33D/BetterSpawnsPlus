{
    "name": "BetterSpawnsPlus",
    "version": "2.0.0",
    "main": "src/BSPMain.js",
    "license": "MIT License",
    "author": "PreyToLive",
    "akiVersion": "3.7.1",
    "scripts": {
        "setup:environment": "npm i",
        "build:compile": "tsc",
        "build:unzipped": "copyfiles -e \"./node_modules/**/*.*\" -e \"./dist/**/*.*\" -e \"./package-lock.json\" -e \"./tsconfig.json\" -e \"./README.txt\" -e \"./mod.code-workspace\" \"./**/*.*\" ./dist",
        "zip:files": "cd dist/ && bestzip ../mod.zip *",
        "build:zip": "npm run clean:environment && npm run build:compile && npm run build:unzipped && npm run zip:files",
        "clean:environment": "node -e \"require('fs').rm('mod.zip', ()=>{})\" && node -e \"require('fs').rmdir('./dist/',{recursive:true},()=>{})\""
    },
    "devDependencies": {
        "@types/node": "20.4.5",
        "@typescript-eslint/eslint-plugin": "6.2.0",
        "@typescript-eslint/parser": "6.2.0",
        "bestzip": "2.2.1",
        "copyfiles": "2.4.1",
        "eslint": "8.46.0",
        "tsyringe": "4.8.0",
        "typescript": "5.2.2"
    },
    "dependencies": {
        "i18n": "^0.15.1",
        "jsonc": "^2.0.0"
    }
}
